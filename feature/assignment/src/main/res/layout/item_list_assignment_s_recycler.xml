<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_title_assignment_s_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingVertical="14.5dp"
        android:textColor="@color/bg100"
        android:includeFontPadding="false"
        android:text="1단원 문제풀이"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_assignment_s_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~11.10"
        android:textColor="@color/bg100"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@+id/tv_title_assignment_s_list"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_assignment_s_list"
        app:layout_constraintEnd_toStartOf="@id/tv_assignment_s_status"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_assignment_s_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제출완료"
        android:textColor="@color/blue"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title_assignment_s_list"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_assignment_s_list"
        android:layout_marginEnd="24dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_assignment_s_list"
        android:background="@color/bg40"/>
</androidx.constraintlayout.widget.ConstraintLayout>