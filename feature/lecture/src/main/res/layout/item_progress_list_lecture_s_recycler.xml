<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_unit_lecture_s"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
        android:includeFontPadding="false"
        android:text="1단원"
        android:textColor="@color/bg100"
        android:layout_marginStart="27dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tv_item_expect_day_lecture_s"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
        android:includeFontPadding="false"
        android:text="~11.10"
        android:textColor="@color/bg100"
        android:layout_marginTop="12dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_item_actual_day_lecture_s"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
        android:includeFontPadding="false"
        android:text="~11.12"
        android:textColor="@color/bg100"
        android:layout_marginTop="12dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_item_status_lecture_s"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
        android:includeFontPadding="false"
        android:text="잘했어요"
        android:textColor="@color/blue"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_blue_radius_28"
        />

</LinearLayout>