<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="12dp">
        <TextView
            android:id="@+id/tv_item_unit_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="1단원"
            android:textColor="@color/bg100"
            android:layout_marginStart="27dp"
            />

        <TextView
            android:id="@+id/tv_item_expect_day_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="~11.10"
            android:textColor="@color/bg100"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_item_actual_day_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="~11.12"
            android:textColor="@color/bg100"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_item_status_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="잘했어요"
            android:textColor="@color/blue"
            android:layout_marginEnd="31dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_blue_radius_28"
            android:paddingVertical="3dp"
            android:paddingHorizontal="6dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg40"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>