<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_lecture_s">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_category_lecture_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="18dp"
        android:translationZ="1dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_category_lecture_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="국어"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:paddingStart="24dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:includeFontPadding="false"
                android:background="@drawable/bg_rectangle_stroke_bg20_radius_10"/>
            <TextView
                android:id="@+id/tv_teacher_name_lecture_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg100"
                android:text="박진아 선생님"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@+id/tv_category_lecture_s"
                app:layout_constraintBottom_toBottomOf="@+id/tv_category_lecture_s"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/cv_category_lecture_s"
        app:layout_constraintBottom_toBottomOf="@+id/btn_toggle_down"
        android:background="@drawable/bg_rectangle_solid_bg20_radius_10"
        android:layout_marginHorizontal="18dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_lecture_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s">
        <TextView
            android:id="@+id/tv_item_unit_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="단원"
            android:textColor="@color/bg80"
            android:layout_marginStart="27dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/tv_item_expect_day_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="예상진도"
            android:textColor="@color/bg80"
            android:layout_marginTop="12dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_item_actual_day_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="실제진도"
            android:textColor="@color/bg80"
            android:layout_marginTop="12dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_item_status_lecture_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_category_lecture_s"
            android:includeFontPadding="false"
            android:text="성취도"
            android:textColor="@color/bg80"
            android:layout_marginEnd="31dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_lecture_list_lecture_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_lecture_list_items"
        android:orientation="vertical"
        android:layout_marginHorizontal="18dp"
        android:background="@color/bg20"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lecture_list_lecture_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_toggle_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_down"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_lecture_list_lecture_s"
        app:layout_constraintStart_toStartOf="@+id/linearlayout_lecture_list_lecture_s"
        app:layout_constraintEnd_toEndOf="@+id/linearlayout_lecture_list_lecture_s"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="18dp"
        android:paddingVertical="2dp"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>